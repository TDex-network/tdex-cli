{
  "name": "tdex-cli",
  "version": "1.0.0",
  "contributors": [
    {
      "name": "Marco Argentieri",
      "email": "marco@vulpem.com",
      "url": "https://vulpem.com"
    }
  ],
  "license": "MIT",
  "bin": {
    "tdex-cli": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npx tsc -p ./.tsconfig.json",
    "build-darwin": "npm run build && npx nexe dist/index.js -t darwin-x64 -o tdex-cli-darwin",
    "build-linux": "npm run build &&  npx nexe dist/index.js -t linux-x64 -o tdex-cli-linux",
    "clean": "npx rimraf dist",
    "test": "npm run build && npm run unit",
    "unit": "npx mocha tests/**/*.js"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "chalk": "^3.0.0",
    "commander": "^5.0.0",
    "enquirer": "^2.3.4",
    "liquidjs-lib": "vulpemventures/liquidjs-lib"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^12.12.31",
    "@types/ora": "^3.2.0",
    "mocha": "^7.1.1",
    "nexe": "^3.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  }
}
